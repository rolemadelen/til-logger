<div class="container mx-auto px-64">
  <div class="text-2xl flex flex-col justify-center items-center uppercase mt-10">
    <span>
      New Issue
    </span>
    <span class="text-sm text-gray-500">
      <%= @post.created_at %>
    </span>
  </div>

  <div class="p-6">
    <%= form_tag("/post/create") do %>
      <div class="form">
        <div class="form-body">
          <input type="text" name="title" class="placeholder:italic block bg-white w-full border" placeholder="Title">
          <textarea name="content" class="h-80 placeholder:italic block bg-white w-full border" placeholder="Leave a note here"></textarea> 
          <input type="submit" value="Create">
        </div>
      </div>
    <% end %>
  </div>
</div>
