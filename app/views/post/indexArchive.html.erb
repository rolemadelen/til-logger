<div class="eu:container sm:container sm:mx-auto">
  <div class="mt-10 flex justify-between items-center">
    <%= render partial: 'post/indexNav', :locals => {:currentPage => 'archive'} %>
    <div class="flex mw-auto justify-end">
      <div class="flex text-xs items-center text-gray-400 pr-5">
        <div class="pr-3"> <%= @open.count %> open </div>
        <div class="pr-3"> <%= @closed.count %> archived </div>
      </div>
      <div class="relative search-input ml-3">
        <i class="search absolute top-[6px] left-[11px] fas fa-search hover:cursor-pointer text-gray-400 hover:text-gray-500"></i>
        <input class="placeholder:italic placeholder:text-gray-400 block bg-white w-full border border-gray-300 rounded-md py-1 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-xs" placeholder="Search for anything..." type="text" name="search"/>
      </div>
    </div>
  </div>

  <ul role="list" class="mainlist py-5 my-2">
    <%= render partial: 'post/index', :locals => {:posts => @closed} %>
  </ul>
</div>
