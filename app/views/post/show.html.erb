<div class="eu:container sm:container sm:mx-auto">
  <div class="mt-10"></div>

  <div class="flex justify-between items-center">
    <div class="nav">
      <% if @post.archive %>
        <%= link_to("archive/", "/archive", class: 'nav-link fa fa-archive') %>
        <%= link_to("#{@post.title}/", "/post/#{@post.id}", class: "nav-link active far fa-file-archive") %>
      <%else %>
        <%= link_to("home/", "/", class: 'nav-link far fa-folder-open') %>
        <%= link_to("#{@post.title}/", "/post/#{@post.id}", class: "nav-link active far fa-file") %>
      <%end %>
    </div>
    <div class="flex justify-end">
      <% if @post.archive %>
        <button class="px-2.5 py-1 text-xs text-blue-500 font-semibold rounded-full border border-blue-200 hover:text-white hover:bg-blue-500 hover:border-transparent">
          <%= link_to("Unarchive", "/post/#{@post.id}/archive") %>
        </button>
        <button class="px-2.5 py-1 ml-2 text-xs text-red-500 font-semibold rounded-full border border-red-200 hover:text-white hover:bg-red-500 hover:border-transparent">
          <%= link_to("Delete", "/post/#{@post.id}/destroy", {method: :post}) %>
        </button>
      <% else %>
        <button class="px-2.5 py-1 text-xs text-rose-500 font-semibold rounded-full border border-rose-200 hover:text-white hover:bg-rose-500 hover:border-transparent">
          <%= link_to("Archive", "/post/#{@post.id}/archive") %>
        </button>
      <% end %>

      <button class="px-2.5 py-1 mx-2 text-xs text-gray-500 font-semibold rounded-full border border-gray-200 hover:text-white hover:bg-gray-500 hover:border-transparent">
        <%= link_to("Edit", "/post/#{@post.id}/edit") %>
      </button>
    </div>
  </div>

  <div class="py-6 my-2">
    <div class="tags mb-2">
      <% @tags.each do |tag| %>
        <span class="tag-default <%=tag%> px-2 py-1 text-xs rounded-full hover:border-transparent"><%= link_to(tag, "/tag/#{tag}")%></span>
      <% end %>
    </div>
    <span class="text-xs text-gray-500 flex justify-start mb-4 border-b-2">
      <%if @post.created_at != @post.updated_at %>
        <%= "last updated: #{@post.updated_at.in_time_zone("Asia/Tokyo").strftime("%I:%M %p, %Y-%0m-%0d")}" %>
      <% else %>
        <%= @post.created_at.in_time_zone("Asia/Tokyo").strftime("%I:%m %p, %Y-%0m-%0d %Z") %>
      <% end %>
    </span>

    <div class="content leading-6 p-2">
      <%= markdown(@post.content) %>
    </div>
  </div>
</div>
