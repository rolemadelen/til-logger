<div class="container mx-auto w-3/5">
  <div class="text-2xl flex flex-col justify-center items-center mt-10">
    <span>
      <%= markdown(@post.title)%>
    </span>
    <span class="text-sm text-gray-500">
      <%= @post.created_at %>
    </span>
  </div>

  <% if @post.archive %>
    <button class="px-2.5 py-1 text-xs text-blue-600 font-semibold rounded-full border border-blue-200 hover:text-white hover:bg-blue-600 hover:border-transparent flex mx-auto float-right">
      <%= link_to("Unarchive", "/post/#{@post.id}/archive") %>
    </button>
  <% else %>
    <button class="px-2.5 py-1 text-xs text-rose-600 font-semibold rounded-full border border-rose-200 hover:text-white hover:bg-rose-600 hover:border-transparent flex mx-auto float-right">
      <%= link_to("Archive", "/post/#{@post.id}/archive") %>
    </button>
  <% end %>

  <button class="px-2.5 py-1 mx-2 text-xs text-black-600 font-semibold rounded-full border border-black-200 hover:text-white hover:bg-gray-600 hover:border-transparent flex mx-auto float-right">
    <%= link_to("Edit", "/post/#{@post.id}/edit") %>
  </button>

  <div class="p-6">
    <%= markdown(@post.content) %>
  </div>
</div>
