<div class="form">
  <div class="form-body">
    <input type="text" name="title" class="placeholder:italic block bg-white w-full border dark:bg-[#191b28] dark:text-[#d9d9d9]" placeholder="Title" value="<%= title %>">
    <input type="text" name="tags" class="placeholder:italic block bg-white w-full border dark:bg-[#191b28] dark:text-[#d9d9d9]" placeholder="Tags (e.g. ruby, rails, c++, ...)" value="<%= tags %>">
    <textarea name="content" class="h-80 placeholder:italic block bg-white w-full border dark:bg-[#191b28] dark:text-[#d9d9d9]" placeholder="Leave a note here"><%= content %></textarea> 
    <input type="submit" value="<%= value %>" class="px-2.5 py-1 mt-2 text-xs text-gray-600 font-semibold rounded-full border border-gray-200 hover:text-white hover:bg-gray-600 hover:border-transparent hover:cursor-pointer dark:text-[#d9d9d9] dark:bg-[#191b28] dark:hover:bg-[#d9d9d9] dark:hover:text-[#191b28]">
  </div>
</div>
