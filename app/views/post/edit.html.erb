<div class="container mx-auto px-64">
  <div class="text-2xl flex flex-col justify-center items-center uppercase mt-10">
    <span>
      <%= "Edit: #{@post.title}" %>
    </span>
    <span class="text-sm text-gray-500">
      <%= @post.created_at %>
    </span>
  </div>

  <div class="p-6">
    <%= form_tag("/post/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <input type="text" name="title" class="placeholder:italic block bg-white w-full border" value="<%= "#{@post.title}" %>" placeholder="Title">
          <textarea name="content" class="h-80 placeholder:italic block bg-white w-full border" placeholder="Leave a note here"> <%= @post.content %> </textarea> 
          <input type="submit" value="Update" class="px-2.5 py-1 text-xs text-gray-600 font-semibold rounded-full border border-gray-200 hover:text-white hover:bg-gray-600 hover:border-transparent">
        </div>
      </div>
    <% end %>
  </div>
</div>
