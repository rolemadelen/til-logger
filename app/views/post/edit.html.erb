<div class="eu:container sm:container sm:mx-auto">
  <div class="text-2xl flex flex-col justify-center items-center mt-10">
    <span>
      <%= "Edit: #{@post.title}" %>
    </span>
    <span class="text-sm text-gray-500">
      <%= @post.updated_at.in_time_zone("Asia/Tokyo").strftime("%I:%m %p, %Y-%0m-%0d %Z") %>
    </span>
  </div>

  <div class="flex justify-between items-center">
    <div class="nav">
      <% if @post.archive %>
      <%= link_to("archive /", "/", class: 'nav-link fa fa-archive') %>
      <%= link_to("#{@post.title}/", "/post/#{@post.id}", class: 'nav-link far fa-file-archive') %>
      <% else %>
      <%= link_to("home /", "/", class: 'nav-link far fa-folder-open') %>
      <%= link_to("#{@post.title}/", "/post/#{@post.id}", class: 'nav-link far fa-file') %>
        <% end %>
      <%= link_to("...edit", "/post/#{@post.id}/edit", class: 'nav-link active') %>
    </div>
  </div>

  <div class="py-6 my-2">
    <%= form_tag("/post/#{@post.id}/update") do %>
      <%= render partial: 'post/issueForm', :locals => {:title => @post.title, :tags => @post.tags, :content => @post.content}%>
    <% end %>
  </div>
</div>
