<div class="eu:container sm:container sm:mx-auto">
  <div class="text-2xl flex flex-col justify-center items-center mt-10">
    <span>
      <%= "Edit: #{@post.title}" %>
    </span>
    <span class="text-sm text-gray-500">
      <%= @post.updated_at %>
    </span>
  </div>
  <div class="flex justify-between items-center">
    <div class="nav">
      <% if @post.archive %>
      <%= link_to("archive /", "/", class: 'nav-link fa fa-archive') %>
      <%= link_to("#{@post.title}/", "/post/#{@post.id}", class: 'nav-link far fa-file-archive') %>
      <% else %>
      <%= link_to("home /", "/", class: 'nav-link far fa-folder-open') %>
      <%= link_to("#{@post.title}/", "/post/#{@post.id}", class: 'nav-link far fa-file') %>
        <% end %>
      <%= link_to("...edit", "/post/#{@post.id}/edit", class: 'nav-link active') %>
    </div>
  </div>

  <div class="py-6 my-2">
    <%= form_tag("/post/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <input type="text" name="title" class="placeholder:italic block bg-white w-full border" value="<%= "#{@post.title}" %>" placeholder="Title">
          <input type="text" name="tags" class="placeholder:italic block bg-white w-full border" value="<%= "#{@post.tags}" %>" placeholder="Tags (e.g. ruby, rails, ...)">
          <textarea name="content" class="h-96 placeholder:italic block bg-white w-full border" placeholder="Leave a note here"> <%= @post.content %> </textarea> 
          <input type="submit" value="Update" class="px-2.5 py-1 mt-2 text-xs text-gray-600 font-semibold rounded-full border border-gray-200 hover:text-white hover:bg-gray-600 hover:border-transparent hover:cursor-pointer">
        </div>
      </div>
    <% end %>
  </div>
</div>
